@using WebApplication1.Models.Course
@model CreateCourseViewModel

@{
    ViewData["Title"] = "Добавить новый предмет";
}

<div class="container py-5">
    <div class="card shadow">
        <div class="card-header bg-primary text-white">
            <h2 class="mb-0"><i class="bi bi-person-plus"></i> @ViewData["Title"]</h2>
        </div>
        <div class="card-body">
            <form asp-action="Create" method="post" class="needs-validation" novalidate>
                @Html.AntiForgeryToken()
                <div class="row g-3">
                    <div class="col-md-6">

                        <div class="mb-3">
                            <label asp-for="@Model.Name" class="form-label">Наименование предмета</label>
                            <input asp-for="@Model.Name" class="form-control" required />
                            <div class="invalid-feedback">Пожалуйста, укажите наименование предмета</div>
                        </div>
                    </div>


                </div>

                <div class="mt-4 d-flex justify-content-between">
                    <a href="@Url.Action("Index", "Course")" class="btn btn-outline-secondary">
                        <i class="bi bi-arrow-left"></i> Назад к списку
                    </a>
                    <button type="submit" class="btn btn-primary">
                        <i class="bi bi-save"></i> Сохранить
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Styles {
    <link rel="stylesheet" href="~/css/create.css" />
}

@section Scripts {
    <script src="~/js/create.js"></script>
}